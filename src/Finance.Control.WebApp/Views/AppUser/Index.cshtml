@{
    ViewData["Title"] = "Usuários";
}

﻿<div class="col-12 mb-2 mb-xl-3 d-flex">
    <div class="col-auto">
        <h5 class="card-title">Gerenciamento de Usuários</h5>
    </div>

    <div class="col-auto ms-auto text-end mt-1">
        <a class="btn btn-dark" asp-action="Create">
            Cadastrar Usuário
        </a>
    </div>
</div>

<div class="card px-0 px-lg-4 pb-lg-4">
    <div class="d-flex align-items-center my-4">
        @*  <h5>Pessoas</h5> *@

        <div class="col-12 col-lg-3 px-0 px-lg-2 mt-1 mt-lg-0 ms-auto">
            <div class="input-group rounded">
                <span class="input-group-text"><i class="fa fa-search"></i></span>
                <input type="text" class="form-control border-start-0" placeholder="Buscar" id="search" name="search" />
            </div>
        </div>

        <button id="button-search" class="btn btn-dark" type="button">
            Buscar
        </button>
    </div>

    <div class="table-responsive">
        <table class="table mb-5" id="table-user">
            <thead>
                <tr>
                    <th scope="col">Ativo</th>
                    <th scope="col">Nome</th>
                    <th scope="col">Email</th>
                    <th scope="col">Perfil</th>
                    <th scope="col">Ações</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="~/js\appuser\index.js"></script>
