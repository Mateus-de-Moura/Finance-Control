@model Finance.Control.webApp.ViewModel.AccountsPayableViewModel


<input type="hidden" asp-for="Id" />

<div class="card">
	<div class="col-12 mt-5 d-flex">
		<div class="col-5">
			<div class="form-check">
				<input class="form-check-input" type="checkbox" id="flexCheckDefault" asp-for="Active">
				<label class="form-label" for="flexCheckDefault">
					Ativo
				</label>
			</div>
		</div>
	</div>


	<div class="col-12 mt-2 mb-xl-3 d-flex">
		<div class="col-5">
			<label class="form-label">Descrição da conta</label>
			<input class="form-control" asp-for="Description"/>
			<span class="text-danger"></span>
		</div>

		<div class="col-3">
			<label class="form-label">Valor</label>
			<input class="form-control" asp-for="Value"/>
			<span class="text-danger"></span>
		</div>

		<div class="col-3">
			<label class="form-label">Data de vencimento</label>
			<input class="form-control" type="date" asp-for="MaturityDate" />
			<span class="text-danger"></span>
		</div>
	</div>

	<div class="col-12 mt-2 mb-xl-3 d-flex">
		<div class="col-5">
			<label class="form-label">Categoria </label>
			<select class="form-select" asp-items="@Model.SelectListCategory" asp-for="CategoryId">
				<option disabled selected> Selecione</option>				
			</select>
			<span class="text-danger"></span>
		</div>

		<div class="col-5">
			<label class="form-label">Status</label>
			<select class="form-select" asp-items="@Model.SelectListStatus" asp-for="status">
				<option disabled selected> Selecione</option>
			
			</select>
			<span class="text-danger"></span>
		</div>

	</div>



	﻿<div class="col-12 mb-2 mb-xl-3 d-flex">
		<div class="col-auto ms-auto text-end mt-1">
			<button class="btn btn-dark" type="submit">
				Salvar
			</button>
		</div>
	</div>


</div>