@model Finance.Control.Domain.Entities.Category


<input type="hidden" asp-for="Id" />

<div class="card">
	<div class="col-12 mt-5 d-flex">
		<div class="col-5">
			<div class="form-check">
				<input class="form-check-input" type="checkbox" id="flexCheckDefault" asp-for="Active">
				<label class="form-label" for="flexCheckDefault" asp-for="Active">
					Ativo
				</label>
			</div>
		</div>
	</div>


	<div class="col-12 mt-2 mb-xl-3 d-flex">
		<div class="col-5">
			<label class="form-label">Nome da Categoria</label>
			<input class="form-control" asp-for="Name" />
			<span asp-validation-for="Name" class="text-danger"></span>
		</div>
		<div class="col-5">
			<label class="form-label">Tipo da categoria</label>
			<select class="form-select" asp-for="Type">
				<option disabled selected> Selecione</option>
				<option value="Despesa"> Despesa</option>
				<option value="Receita"> Receita</option>
			</select>
			<span asp-validation-for="Type" class="text-danger"></span>
		</div>
	</div>


	﻿<div class="col-12 mb-2 mb-xl-3 d-flex">
		<div class="col-auto ms-auto text-end mt-1">
			<button class="btn btn-dark" type="submit">
				Salvar
			</button>
		</div>
	</div>


</div>