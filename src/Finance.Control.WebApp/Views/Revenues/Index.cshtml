﻿<div class="col-12 mb-2 mb-xl-3 d-flex">
    <div class="col-auto">
        <h5 class="card-title text-primary">Gerenciamento de Receitas</h5>
    </div>

    <div class="col-auto ms-auto text-end mt-1">
        <a class="btn btn-primary" asp-action="Create">
            Cadastrar Receita
        </a>
    </div>
</div>

<div class="card px-0 px-lg-4 pb-lg-4">
    <div class="d-flex align-items-center my-5">
        @*  <h5>Pessoas</h5> *@

        <div class="col-12 col-lg-3 px-0 px-lg-2 mt-4 mt-lg-0 ms-auto">
            <div class="input-group rounded">
                <span class="input-group-text"><i class="fa fa-search"></i></span>
                <input type="text" class="form-control border-start-0" placeholder="Buscar" id="search" name="search" />
            </div>
        </div>

        <button id="button-search" class="btn btn-primary" type="button">
            Buscar
        </button>
    </div>

    <table class="table mb-5" id="table-revenues">
        <thead>
            <tr>
                <th scope="col">Ativo</th>
                <th scope="col">Nome</th>
                <th scope="col">Email</th>
                <th scope="col">Perfil</th>
                <th scope="col">Ações</th>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>
