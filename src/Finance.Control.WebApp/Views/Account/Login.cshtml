@model Finance.Control.webApp.ViewModel.AccountLoginViewModel

<div class="container d-flex justify-content-center align-items-center login-container">
    <div class="card login-form text-center">
        <h5 class="mb-4">Login</h5>
        <form asp-action="Login" method="post">
            <div class="mb-3">             
                <input type="text" class="form-control" id="username" placeholder="Digite seu usuário"  asp-for="Email">
                <span class="text-danger d-flex justify-content-start" asp-validation-for="Email"></span>
            </div>
            <div class="mb-3 position-relative">
               
                <div class="input-group">
                    <input type="password" class="form-control border-end-0" id="password" placeholder="Digite sua senha" asp-for="Password" >
                    <button class="btn btn-outline-secondary button-show border-start-0" type="button" onclick="togglePasswordVisibility()">
                        <i class="fas fa-eye" id="togglePasswordIcon" style="color: black;"></i>
                    </button>
                </div>
                    <span class="text-danger d-flex justify-content-start" asp-validation-for="Password"></span>
            </div>
            <button type="submit" class="btn btn-custom w-100">Entrar</button>
        </form>
    </div>
</div>


@section Scripts {
    <script src="~/js/login/login.js"></script>
}