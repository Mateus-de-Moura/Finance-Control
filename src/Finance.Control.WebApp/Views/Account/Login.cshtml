

<div class="container d-flex justify-content-center align-items-center login-container">
    <div class="card login-form text-center">
        <h5 class="mb-4">Login</h5>
        <form asp-action="LoginUser">
            <div class="mb-3">
             
                <input type="text" class="form-control" id="username" placeholder="Digite seu usuário" required>
            </div>
            <div class="mb-3 position-relative">
               
                <div class="input-group">
                    <input type="password" class="form-control border-end-0" id="password" placeholder="Digite sua senha" required>
                    <button class="btn btn-outline-secondary button-show border-start-0" type="button" onclick="togglePasswordVisibility()">
                        <i class="fas fa-eye" id="togglePasswordIcon" style="color: black;"></i>
                    </button>
                </div>
            </div>
            <button type="submit" class="btn btn-custom w-100">Entrar</button>
        </form>
    </div>
</div>


@section Scripts {
    <script src="~/js/login/login.js"></script>
}